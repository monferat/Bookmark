<div class="col-md-3">
  <div class="card">
    <div class="side-crop">
      <%= link_to image_tag(bookmarker.snapshot.url, width: '300'), bookmarker.url %>
    </div>
    <div class="card-body">
      <h6 class="card-title"><%= link_to bookmarker.title, bookmarker %></h6>
      <p class="card-text">
        <% if bookmarker.user.eql?(current_user) %>
            <%= link_to 'Edit', edit_bookmarker_path(bookmarker), remote: true, :class => 'btn btn-info btn-sm' %>
            <%= link_to 'Delete', bookmarker, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info btn-sm ' %>
        <% end %>
      </p>
    </div>
  </div>
</div>